{
    "name": "@milesight/responsive-react",
    "version": "0.2.0",
    "description": "React hooks and components for building responsive websites.",
    "license": "MIT",
    "homepage": "https://github.com/Milesight-IoT/responsive-toolkit",
    "repository": "https://github.com/Milesight-IoT/responsive-toolkit.git",
    "bugs": {
        "url": "https://github.com/Milesight-IoT/responsive-toolkit/issues"
    },
    "keywords": [
        "responsive",
        "react",
        "hook",
        "useMediaQuery",
        "breakpoints"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "scripts": {
        "dev": "tsup --watch",
        "build": "tsup",
        "test": "vitest run",
        "test:watch": "vitest",
        "coverage": "vitest run --coverage",
        "lint": "eslint ./src/*",
        "lint:fix": "eslint --fix ./src/*",
        "prepublish": "pnpm run build"
    },
    "peerDependencies": {
        "react": "^17 || ^18 || ^19"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^4.10.1",
        "@eslint-react/eslint-plugin": "^1.36.1",
        "@types/react": "^18.2.0",
        "@vitest/coverage-v8": "^3.0.7",
        "eslint": "^9.22.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "react": "^18.2.0",
        "tsup": "^8.4.0",
        "typescript": "^5.8.2",
        "vitest": "^3.0.7"
    }
}
