{
    "name": "@milesight/responsive-toolkit",
    "description": "A powerful Toolkit for building responsive websites.",
    "license": "MIT",
    "scripts": {
        "dev": "pnpm --filter=@milesight/* -r run dev",
        "build": "pnpm --filter=@milesight/* -r run build",
        "changeset": "changeset",
        "docs:dev": "pnpm --stream --filter=docs dev",
        "docs:build": "pnpm --stream --filter=docs build",
        "docs:preview": "pnpm --stream --filter=docs preview"
    },
    "devDependencies": {
        "@changesets/cli": "^2.28.1"
    }
}